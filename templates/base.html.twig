<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}SymBank
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<a class="navbar-brand" href="{{ path('home') }}">SymBank</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item {% if current_page is defined and current_page == 'client' %}active{% else %}{% endif %}">
							<a class="nav-link" href="{{ path('client_new') }}">Créer un client</a>
						</li>
						<li class="nav-item {% if current_page is defined and current_page == 'credit' %}active{% else %}{% endif %}">
							<a class="nav-link" href="{{ path('credit_new') }}">Ajouter un crédit</a>
						</li>
						<li class="nav-item {% if current_page is defined and current_page == 'show_client' %}active{% else %}{% endif %}">
							<a class="nav-link" href="{{ path('client_index') }}">Liste des clients</a>
						</li>
					</ul>
				</div>
			</nav>
			{% block body %}{% endblock %}
			{% block javascripts %}{% endblock %}
			<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
		</body>
	</html>
